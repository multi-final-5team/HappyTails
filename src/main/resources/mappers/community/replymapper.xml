<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.happytails.community.reply.model.dao.ReplyMapper">

    <!-- 댓글 추가 -->
    <insert id="insertReply" parameterType="com.multi.happytails.community.reply.model.dto.ReplyDTO">
        INSERT INTO TB_COMMUNITY_REPLY (COMMUNITY_CATEGORY_CODE, FOREIGN_NO, WRITER_ID, CONTENT, CREATED_DATE, UPDATED_DATE)
        VALUES (#{communityCategoryCode}, #{foreignNo}, #{writerId}, #{content}, #{createdDate}, #{updatedDate})
    </insert>

    <!-- 조회  -->
    <select id="selectReplyById" parameterType="int" resultType="com.multi.happytails.community.reply.model.dto.ReplyDTO">
        SELECT * FROM TB_COMMUNITY_REPLY
        WHERE COMMUNITY_REPLY_NO = #{communityReplyNo}
    </select>

    <!-- 댓글 수정 -->
    <update id="updateReply" parameterType="com.multi.happytails.community.reply.model.dto.ReplyDTO">
        UPDATE TB_COMMUNITY_REPLY
        SET COMMUNITY_CATEGORY_CODE = #{communityCategoryCode},
        FOREIGN_NO = #{foreignNo},
        WRITER_ID = #{writerId},
        CONTENT = #{content}
        WHERE COMMUNITY_REPLY_NO = #{communityReplyNo}
    </update>

    <!--댓글 삭제 -->
    <delete id="deleteReply" parameterType="int">
        DELETE FROM TB_COMMUNITY_REPLY
        WHERE COMMUNITY_REPLY_NO = #{communityReplyNo}
    </delete>

    <!-- 모든 댓글 조회 -->
    <select id="selectAllReply" resultType="com.multi.happytails.community.reply.model.dto.ReplyDTO">
        SELECT * FROM TB_COMMUNITY_REPLY
    </select>


</mapper>